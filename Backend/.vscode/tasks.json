{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Spring Boot",
      "type": "shell",
      "command": "mvn spring-boot:run",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Run FastAPI",
      "type": "shell",
      "command": "python -m uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload",
      "options": {
        "cwd": "D:/vscode/ModelService"
      },
      "problemMatcher": []
    },
    
    {
      "label": "Run BE + FastAPI",
      "dependsOn": [
        "Run Spring Boot",
        "Run FastAPI"
      ],
      "dependsOrder": "parallel"
    }
  ]
}
